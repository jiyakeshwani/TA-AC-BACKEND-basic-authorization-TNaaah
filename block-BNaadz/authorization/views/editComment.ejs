<!DOCTYPE html>
<html>
  <head>
    <title>authorization</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="flex container">
        <a href="/blog/routes/index.js" class="brand">Blog App</a>

        <%if(user){ %>
        <span><%= user.name%></span>
        <nav>
          <a href="/article/myarticles">My Articles</a>
          <a href="/article/new">Add Article</a>
          <a href="/users/logout">Logout</a>
        </nav>
        <% }else { %>
        <nav>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        </nav>
        <% } %>
      </div>
    </header>

    <div>
      <form action="/article/<%= articles.id %>/comment" method="post">
        <textarea name="comment" rows="5" placeholder="Add Comment"></textarea>
        <input type="submit" value="Update Comment" />
      </form>
    </div>
  </body>
</html>
